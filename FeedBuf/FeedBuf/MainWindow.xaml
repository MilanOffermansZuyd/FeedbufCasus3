<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="FeedBuf.MainWindow"
        Title="Feedbuf" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#f10000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#dd0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#ebebeb" Grid.Column="0" CornerRadius="10" Margin="10" Padding="10">
            <StackPanel>
                <Button x:Name="DashboardButton" Content="Dashboard" Click="DashboardButton_Click"/>
                <Button x:Name="ActionButton" Content="Action" Click="ActionButton_Click"/>
                <Button x:Name="GoalButton" Content="Goal" Click="GoalButton_Click"/>
                <Button x:Name="LogoutButton" Content="Log Out"/>
            </StackPanel>
        </Border>

        <Border x:Name="DashboardPanel" Background="#ebebeb" Grid.Column="1" CornerRadius="10" Margin="10" av:IsHidden="True">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
                <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="Information" FontSize="14" TextWrapping="Wrap"
                           Width="400" TextAlignment="Center" Margin="0,10,0,10"/>
            </StackPanel>
        </Border>
        <Border x:Name="ActionPanel" Background="#ebebeb" Grid.Column="1" CornerRadius="10" Margin="10" av:IsHidden="True">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Height="544" Width="600">
                <TextBlock Text="Action panel" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="Actions" FontSize="14" TextWrapping="Wrap"
                    Width="400" TextAlignment="Center" Margin="0,10,0,10"/>
                <ListView av:ItemsSource="{av:SampleData ItemCount=5}" Height="338">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button x:Name="CreateActionButton" Content="Create"/>
                <Button x:Name="UpdateActionButton" Content="Update"/>
                <Button x:Name="DeleteActionButton" Content="Delete"/>
            </StackPanel>
        </Border>
        <Border x:Name="GoalsPanel" Background="#ebebeb" Grid.Column="1" CornerRadius="10" Margin="10">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Height="544" Width="600">
                <TextBlock Text="Goals panel" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="Goals" FontSize="14" TextWrapping="Wrap"
            Width="400" TextAlignment="Center" Margin="0,10,0,10"/>
                <ListView x:Name="GoalsListView" av:ItemsSource="{av:SampleData ItemCount=5}" Height="338">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button x:Name="CreateGoalButton" Content="Create"/>
                <Button x:Name="UpdateGoalButton" Content="Update"/>
                <Button x:Name="DeleteGoalButton" Content="Delete"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>